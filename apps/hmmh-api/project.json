{
  "name": "hmmh-api",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/hmmh-api",
  "projectType": "application",
  "tags": [],
  "targets": {
    "run": {
      "executor": "nx:run-commands",
      "options": {
        "command": "dotnet run --project apps/hmmh-api/Hmmh.Api.csproj"
      }
    },
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "command": "dotnet build apps/hmmh-api/Hmmh.Api.csproj -c Release"
      }
    },
    "docker-build": {
      "executor": "nx:run-commands",
      "options": {
        "command": "docker build -f apps/hmmh-api/Dockerfile . -t hmmh-api:dev"
      }
    },
    "db:up": {
      "executor": "nx:run-commands",
      "options": {
        "command": "docker compose -f apps/hmmh-api/Db/docker-compose.yml up -d"
      }
    },
    "db:down": {
      "executor": "nx:run-commands",
      "options": {
        "command": "docker compose -f apps/hmmh-api/Db/docker-compose.yml down"
      }
    }
  }
}
